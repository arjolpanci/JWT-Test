<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Test Application</title>
    <link rel="stylesheet" href="styles.css">
    <script src="http://code.jquery.com/jquery-3.6.0.js"></script>
</head>
<body>
    
    <div class="container h-screen w-screen flex items-center justify-center mx-auto bg-gray-100">
        
        <div class="w-3/4 md:w-1/2 my-2 p-2 md:my-8 md:p-8 bg-white rounded-lg">
            <div class="flex flex-col p-2 gap-4 md:p-4 md:gap-8 items-center">
                <p class="text-xl md:text-3xl text-blue-700 font-bold uppercase px-2 py-1 md:px-4 md:py-2 w-full rounded-lg text-center"> Login Form </p>

                <div class="flex flex-col md:w-1/2">
                    <div class="flex items-center justify-between gap-2 w-full py-4">
                        <p class="md:text-lg w-1/2"> Username: </p>
                        <input class="w-full focus:outline-none ring-1 ring-gray-200 rounded-lg py-1 px-2" type="text" name="username" id="user">
                    </div>
                    <div class="flex items-center justify-between gap-2 w-full py-4">
                        <p class="text-lg w-1/2"> Password: </p>
                        <input class="w-full focus:outline-none ring-1 ring-gray-200 rounded-lg py-1 px-2" type="password" name="password" id="pass">
                    </div>
                    <p class="hidden js-error text-red-600 py-2 font-semi-bold text-lg text-center"> Wrong Credentials! </p>
                    <div class="bg-blue-700 js-login-button cursor-pointer rounded-lg p-2">
                        <p class="text-white font-semi-bold text-lg text-center"> Login </p>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <script src="index.js"></script>
</body>
</html>